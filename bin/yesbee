#!/usr/bin/env node

var argv = require('optimist').argv,
    container = require('../lib/container');

switch(argv._[0] || 'start') {
    case 'start':
        container.start();
        break;
    case 'stop':
        container.stop();
        break;
    default:
        console.log('Usage: ' + argv.$0 + ' [start|stop]');
}
